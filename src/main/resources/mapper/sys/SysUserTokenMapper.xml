<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo.modules.user.SysUserTokenMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.example.demo.modules.user.entity.SysUserToken">
        <id column="USER_ID" property="userId" />
        <result column="TOKEN" property="token" />
        <result column="EXPIRE_TIME" property="expireTime" />
        <result column="UPDATE_TIME" property="updateTime" />
    </resultMap>

	<select id="queryByUserId" resultType="com.example.demo.modules.user.entity.SysUserToken">
		SELECT * FROM SYS_USER_TOKEN WHERE USER_ID = #{value}
	</select>

	<select id="queryByToken" resultType="com.example.demo.modules.user.entity.SysUserToken">
		SELECT * FROM SYS_USER_TOKEN WHERE TOKEN = #{value}
	</select>
</mapper>
